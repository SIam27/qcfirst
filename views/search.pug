extends layout

block content
  .container-fluid
    .row
      .col-12.d-flex.align-items-center.flex-row
        img.m-3.align-self-start(src='/images/qcfirst.png' width='110' alt='qcfirst')
        .flex-grow-1.text-center.pr-5
          h3.mb-4.pr-5 Search
  .container.flex-grow-1
    .row.justify-content-center.my-5
      .col-md-8
        table.table
          thead
            tr
              th Class
              th Instructor
              th Enrollment Deadline
              th Actions
          tbody
            each courseData in coursesData
              tr 
                form(method="POST" action="/enrollment")
                    input(type="hidden" value=courseData.course_name name="course_name")
                    input(type="hidden" value=courseData.department name="department")
                    td 
                        =courseData.course_name
                    td 
                        =courseData.first_name
                    td 
                        =moment(courseData.deadline).format('YYYY-MM-DD')
                    td
                        button.btn.btn-outline-primary.btn-rounded(href='/' type='submit') Enroll