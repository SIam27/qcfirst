extends ./../layout

block content
  .container-fluid
    .row
      .col-12.d-flex.align-items-center.flex-row
        img.m-3.align-self-start(src='/images/qcfirst.png' width='110' alt='qcfirst')
        .flex-grow-1.text-center.pr-5
          h3.mb-4.pr-5 Courses List
  .container.flex-grow-1
    .row.justify-content-center.my-5
      .col-md-8
        nav(aria-label='breadcrumb')
          ol.breadcrumb
            li.breadcrumb-item
              a(href='/admin') Admin
            if name !== 0
                li.breadcrumb-item
                    a(href='/admin/users-list') 
                        =name
            li.breadcrumb-item.active(aria-current='page') Courses list
        table.table
          thead
            tr
              th Course/NameId
              th Capacity
              th Enrollment Deadline
              th Actions
          tbody
            each courseData in coursesData
              tr 
                td 
                  =courseData.course_name
                td 
                  =courseData.capacity
                td 
                    =moment(courseData.deadline).format('YYYY-MM-DD')
                td 
                  a.btn.btn-outline-primary.btn-rounded.px-3.py-1(href='/admin/roaster/'+courseData.id+'/'+courseData.course_name) Show roaster